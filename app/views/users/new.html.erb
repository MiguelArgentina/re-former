<div>
  <h1>Bare Metal Form</h1>



  <%= form_with model: @user do |form| %>
   <%= form.label :username, 'Username' %><br>
   <%= form.text_field :username %>
   <%= form.label :email, 'Email' %><br>
   <%= form.email_field :email %>
   <%= form.label :password, 'Password' %><br>
   <%= form.password_field :password %>


   <%= form.submit "Create" %>
 <% end %>



<% if false %>
  <%= form_tag("/users", method: "post") do %>
    <%= label_tag 'username', 'Username' %><br>
    <%= text_field_tag 'username' %><br><br>
    <%= label_tag 'email', 'Email:'%><br>
    <%= email_field_tag 'email' %><br><br>
    <%= label_tag 'password', 'Password:'%><br>
    <%= password_field_tag 'password', 'Password:' %><br><br>
    <%= submit_tag 'Submit' %>
  <% end %>
<% end %>

