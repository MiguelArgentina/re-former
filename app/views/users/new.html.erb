<div class="row">
  <div class="col-md-6 col-md-offset-3 ms-4">
    <h1>Bare Metal Form</h1>
    <%= form_with model: @user do |form| %>
      <%= form.label :username, 'Username' %><br>
      <%= form.text_field :username %><br><br>
      <%= form.label :email, 'Email' %><br>
      <%= form.email_field :email %><br><br>
      <%= form.label :password, 'Password' %><br>
      <%= form.password_field :password %><br><br>
      <%= form.submit "#{'submit'}".upcase, class:"btn btn-primary" %>
    <% end %>
  </div>

//This condition comments out this Form
  <% if false %>
    <%= form_tag("/users", method: "post") do %>
      <%= label_tag 'username', 'Username' %><br>
      <%= text_field_tag 'username' %><br><br>
      <%= label_tag 'email', 'Email:'%><br>
      <%= email_field_tag 'email' %><br><br>
      <%= label_tag 'password', 'Password:'%><br>
      <%= password_field_tag 'password', 'Password:' %><br><br>
      <%= submit_tag 'Submit' %>
    <% end %>
  <% end %>

